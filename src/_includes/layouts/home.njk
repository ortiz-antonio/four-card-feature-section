{% extends "layouts/base.njk" %}

{% block content %}
  <main>
    <section class="features region">
      <h2>{{ title }}</h2>
      <h3>{{ subtitle }}</h3>
      <p class="features__summary">{{ summary }}</p>
    </section>

    <div class="grid" data-layout="cross-four">
      {% for item in tools.items %}
        <article class="feature border-{{ item.titleSlug }}">
          <h4>{{ item.title }}</h4>
          <p>{{ item.summary  | safe }}</p>
          <img class="feature__img flow" src="{{ item.art }}" alt="" />
        </article>
      {% endfor %}
    </div>
  </main>
{% endblock %}
