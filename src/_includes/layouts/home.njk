{% extends "layouts/base.njk" %}

{% block content %}
  <main>
    <section class="section region">
      <h1>{{ title }}</h1>
      <h2>{{ subtitle }}</h2>
      <p class="section__summary">{{ summary }}</p>
    </section>

    {% for item in tools.items %}
      <article class="card border-{{ item.titleSlug }}">
        <h3>{{ item.title }}</h3>
        <p>{{ item.summary  | safe }}</p>
        <img class="card__img flow" src="{{ item.art }}" alt="" />
      </article>
    {% endfor %}
  </main>
{% endblock %}
