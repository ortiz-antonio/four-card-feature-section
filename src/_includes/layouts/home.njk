{% extends "layouts/base.njk" %}

{% block content %}
  <main>
    <section class="features region">
      <hgroup>
        <h2>{{ title }}</h2>
        <h3>{{ subtitle }}</h3>
      </hgroup>
      <p class="features__summary">{{ summary }}</p>
    </section>

    <div class="grid">
      {% for item in tools.items %}
        <article
          class="feature feature-{{ item.titleSlug }}"
          aria-labelledby="feature-{{ item.titleSlug }}"
        >
          <h4>{{ item.title }}</h4>
          <p>{{ item.summary  | safe }}</p>
          <img class="feature__img flow" src="{{ item.art }}" alt="" />
        </article>
      {% endfor %}
    </div>
  </main>
{% endblock %}
